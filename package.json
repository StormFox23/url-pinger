{
  "name": "url-pinger",
  "displayName": "URL Pinger",
  "description": "Pings URLs to check if they're alive with advanced features like bulk testing, scheduling, and history.",
  "icon": "icon.png",
  "version": "0.1.0",
  "publisher": "StormFox23",
  "repository": {
    "type": "git",
    "url": "https://github.com/StormFox23/url-pinger.git"
  },
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "url-pinger.clearHistory",
        "title": "Clear URL History",
        "icon": "$(trash)"
      },
      {
        "command": "url-pinger.exportResults",
        "title": "Export Results",
        "icon": "$(export)"
      },
      {
        "command": "url-pinger.bulkTest",
        "title": "Bulk URL Test",
        "icon": "$(list-tree)"
      },
      {
        "command": "url-pinger.scheduleTest",
        "title": "Schedule Periodic Test",
        "icon": "$(clock)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "url-pinger-container",
          "title": "URL Pinger",
          "icon": "$(pulse)"
        }
      ]
    },
    "views": {
      "url-pinger-container": [
        {
          "id": "url-pinger-view",
          "name": "URL Pinger",
          "type": "webview",
          "icon": "$(globe)"
        }
      ]
    },
    "configuration": {
      "title": "URL Pinger",
      "properties": {
        "urlPinger.defaultTimeout": {
          "type": "number",
          "default": 10000,
          "description": "Default timeout for URL requests (in milliseconds)"
        },
        "urlPinger.maxHistorySize": {
          "type": "number",
          "default": 20,
          "description": "Maximum number of URLs to keep in history"
        },
        "urlPinger.autoScheduleInterval": {
          "type": "number",
          "default": 60000,
          "description": "Default interval for scheduled pings (in milliseconds)"
        },
        "urlPinger.enableNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Enable notifications for ping results"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build:release": "node build-release.js",
    "build:release:interactive": "node build-release.js --interactive",
    "build:release:patch": "node build-release.js --version=patch",
    "build:release:minor": "node build-release.js --version=minor",
    "build:release:major": "node build-release.js --version=major",
    "build:release:custom": "node build-release.js --version=custom",
    "build:release:no-bump": "node build-release.js --version=none"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "chalk": "^4.1.2",
    "eslint": "^9.25.1",
    "inquirer": "^8.2.6",
    "semver": "^7.7.2",
    "shelljs": "^0.8.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
